Please edit your country: 

<%= form_tag "/countries/#{@country.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

   <div>
    <%= label_tag :continent %>
    <%= text_field_tag :continent %>
  </div>

   <div>
    <%= label_tag :colors %>
    <%= text_field_tag :colors %>
  </div>

   <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

  <div>
  <%= submit_tag "Submit" %>
  </div>

<% end %> 